<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/productParentFragment">

    <fragment
        android:id="@+id/productParentFragment"
        android:name="com.example.alsess.view.ProductParentFragment"
        android:label="fragment_products"
        tools:layout="@layout/fragment_product_parent" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.alsess.view.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/toProductsDetail"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/basketFragment"
        android:name="com.example.alsess.view.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" >
        <action
            android:id="@+id/toProductsDetail"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.alsess.view.ProfileParentFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile_parent" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.alsess.view.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>